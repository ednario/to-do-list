// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String
  completed   Boolean?
  createdAt   DateTime
  author      User     @relation(fields: [authorId], references: [id])
  authorId    String
}

model User {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime
  tasks     Task[]
}
